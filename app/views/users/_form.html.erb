<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @user %> 
    <%= form_with(model: @user, local: true, class: "mt-4 shadow p-3 mb-3 bg-info rounded") do |f| %>
    <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, placeholder: "Choose a username", class: "form-control shadow rounded" %>
        </div>
    </div> 

    <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control shadow rounded" %>
        </div>
    </div> 

    <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, placeholder: "Choose your password", class: "form-control shadow rounded" %>
        </div>
    </div> 

    <div class="form-group row justify-content-center">
      <%= f.submit 'Sign up', class: "btn btn-outline-primary" %>
    </div>
    <% end %>
    <p class="text-center">[ <%= link_to 'Cancel and Go Back', articles_path, class: "text-info" %> ]</p>
  </div>
</div>
