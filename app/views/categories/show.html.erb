<h2 class="text-center mt-4">Category</h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <%= render 'layouts/messages' %>
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">          
        </div>
        <div class="card-body">
          <div class="card-text">Name: <%= @category.name %></div>          
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@category.created_at) %> ago, edited <%= time_ago_in_words(@category.updated_at) %> ago.</small>
        </div>
      </div>
    </div>
  </div>
</div>
<p class="text-center">[ <%= link_to 'Go Back', categories_path, class: "text-info" %> ]</p>
