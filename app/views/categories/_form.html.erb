<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @category %> 
    <%= form_with(model: @category, local: true, class: "mt-4 shadow p-3 mb-3 bg-info rounded") do |f| %>
    <div class="form-group row">
        <%= f.label :name, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, placeholder: "Name of category", class: "form-control shadow rounded" %>
        </div>
    </div> 
    <div class="form-group row justify-content-center">
      <%= f.submit class: "btn btn-outline-primary" %>
    </div>
    <% end %>
    <p class="text-center">[ <%= link_to 'Cancel and Go Back', categories_path, class: "text-info" %> ]</p>
  </div>
</div>
