<% categories.each do |cat| %>
<div class="row justify-content-md-center">
  <div class="col-4 mt-4">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-body">
        <h5 class="card-title"><%= link_to cat.name, category_path(cat), class: 'text-success' %></h5>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(cat.created_at) %> ago, edited <%= time_ago_in_words(cat.updated_at) %> ago.</small>
      </div>
    </div>
  </div>
</div>
<% end %>