<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors' %> 
    <%= form_with(model: @article, local: true, class: "mt-4 shadow p-3 mb-3 bg-info rounded") do |f| %>
    <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, placeholder: "Title of article", class: "form-control shadow rounded" %>
        </div>
    </div> 
    <div class="form-group row">
      <%= f.label :description, class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_area :description, rows: 10, placeholder: "Description of article", class: "form-control shadow rounded" %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.submit class: "btn btn-outline-primary" %>
    </div>
    <% end %>
    <p class="text-center">[ <%= link_to 'Cancel and Go Back', articles_path, class: "text-info" %> ]</p>
  </div>
</div>
